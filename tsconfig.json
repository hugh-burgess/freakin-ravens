{
    "compilerOptions": {
      "typeRoots": ["node_modules/@types", "src/types"],
      "baseUrl": ".",
      "paths": {
        "@components/*": ["src/components/*"],
        "@pages/*": ["src/pages/*"],
        "@public/*": ["src/public/*"],
        "@system/*": ["src/system/*"],
        "@templates/*": ["src/templates/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }